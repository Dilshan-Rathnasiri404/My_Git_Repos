import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        String choice;

        System.out.println("ðŸŽ² Welcome to Dice Roller!");

        do {
            System.out.print("Roll one die or two dice? (1/2): ");
            int diceCount = scanner.nextInt();

            if (diceCount == 1) {
                int roll = random.nextInt(6) + 1;
                System.out.println("You rolled: " + roll);
            } else if (diceCount == 2) {
                int roll1 = random.nextInt(6) + 1;
                int roll2 = random.nextInt(6) + 1;
                System.out.println("You rolled: " + roll1 + " and " + roll2);
                System.out.println("Total: " + (roll1 + roll2));
            } else {
                System.out.println("âš  Invalid choice. Please enter 1 or 2.");
            }

            System.out.print("Do you want to roll again? (y/n): ");
            choice = scanner.next();

        } while (choice.equalsIgnoreCase("y"));

        System.out.println("ðŸ‘‹ Thanks for playing!");
        scanner.close();
    }
}
