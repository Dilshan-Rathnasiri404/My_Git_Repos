#include <iostream>
using namespace std;

int main() {
    double temp;
    char choice;

    cout << "ðŸŒ¡ï¸ Temperature Converter ðŸŒ¡ï¸\n";
    cout << "Enter temperature value: ";
    cin >> temp;

    cout << "Convert to (C)elsius, (F)ahrenheit, or (K)elvin? ";
    cin >> choice;

    switch(toupper(choice)) {
        case 'C':
            cout << "Celsius: " << temp << "Â°C\n";
            cout << "Fahrenheit: " << (temp * 9/5) + 32 << "Â°F\n";
            cout << "Kelvin: " << temp + 273.15 << "K\n";
            break;
        case 'F':
            cout << "Celsius: " << (temp - 32) * 5/9 << "Â°C\n";
            cout << "Fahrenheit: " << temp << "Â°F\n";
            cout << "Kelvin: " << (temp - 32) * 5/9 + 273.15 << "K\n";
            break;
        case 'K':
            cout << "Celsius: " << temp - 273.15 << "Â°C\n";
            cout << "Fahrenheit: " << (temp - 273.15) * 9/5 + 32 << "Â°F\n";
            cout << "Kelvin: " << temp << "K\n";
            break;
        default:
            cout << "Invalid choice!\n";
    }

    return 0;
}
